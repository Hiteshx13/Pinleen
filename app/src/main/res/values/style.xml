<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextWhiteNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="TextBlak">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="TextGrayNormal">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="TextGrayDark">
        <item name="android:textColor">@color/colorGrayDark</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>
    <style name="TextRed">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="EditTextSignUp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:background">@color/blackTrans20</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="EditTextOTPVerification">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:background">@drawable/selector_gray_with_white_border</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/selector_green</item>
    </style>

    <style name="ButtonGray">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_button_gray_rounded</item>
    </style>

    <style name="ButtonBlackLight">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_button_black_light_rounded</item>
    </style>


</resources>